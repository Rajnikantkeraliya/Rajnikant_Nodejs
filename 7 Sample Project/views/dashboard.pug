doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Dashboard
    style.
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
      }
      .header {
          background-color: #333;
          color: #fff;
          padding: 20px;
          text-align: center;
      }
      .container {
          display: flex;
          flex-wrap: wrap;
          justify-content: space-around;
          padding: 20px;
      }
      .card {
          width: 300px;
          margin-bottom: 20px;
          border: 1px solid #ccc;
          border-radius: 5px;
          box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
          transition: transform 0.3s ease;
      }
      .card:hover {
          transform: translateY(-5px);
      }
      .card-header {
          background-color: #f0f0f0;
          padding: 10px;
          border-bottom: 1px solid #ccc;
      }
      .card-body {
          padding: 20px;
      }
      .card-title {
          margin-top: 0;
      }
      .card-content {
          color: #333;
      }
  body
    .header
      h1 Dashboard
    .container
      .card
        .card-header
          h2.card-title Widget 1
        .card-body
          p.card-content Content for widget 1 goes here...
      .card
        .card-header
          h2.card-title Widget 2
        .card-body
          p.card-content Content for widget 2 goes here...
    script(src="js/dashboard.js")